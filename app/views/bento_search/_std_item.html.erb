<%# this overrides the partial in bento_search gem %>

<% bento_decorate(item) do |item| %>

    <%# for debugging purposes, we'll include the vendor-specific unique_id, if we have
      one, in a data-unique-id attribute. %>

    <div class="bento_item" data-unique-id="<%= item.unique_id %>">
      <%= render :partial => "bento_search/item_title", :object => item, :as => 'item' %>

      <div class="bento_item_body">
        <dl class="document-metadata dl-horizontal dl-invert">

          <% if item.custom_data['thumbnail'].present? %>
            <dd class="colenda-thumbnail"><%= link_to(image_tag(item.custom_data['thumbnail']), item.link) %></dd>
          <% end %>

          <% if item.authors.present? %>
            <dd><%= item.render_authors_list %></dd>
          <% end %>

          <% if item.has_source_info? %>
            <dd class="source-info"><%= item.render_source_info %></dd>
          <% end %>

          <% if item.display_format.present? %>
              <dd><%= item.display_format %></dd>
          <% end %>

          <% if item.display_date.present? %>
            <dd><%= item.display_date %></dd>
          <% end %>

          <% if item.abstract %>
            <dd><%= item.render_summary %></dd>
          <% end %>

          <% if item.other_links.present? %>
            <dd><%= render_other_links(item.other_links) %></dd>
          <% end %>

          <%=  %>

          <% if item.custom_data['holdings'].present? %>
            <dd><%= link_to(item.custom_data['holdings'], "#{item.link}#franklin-availability") %></dd>
          <% end %>
        </dl>

      </div>

    </div>

<% end %>
