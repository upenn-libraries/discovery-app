
<a href="/"><h1 class="franklin-title"><span class="visually-hidden">Franklin</span></h1></a>
<%= form_tag bento_url, method: :get, class: 'search-query-form clearfix navbar-form', role: 'search' do %>
    <div class="input-group">
      <label for="q" class="sr-only"><%= t('blacklight.search.form.search.label') %></label>
      <%= text_field_tag :q, params[:q], placeholder: t('franklin.bento_search.placeholder'), class: "search_q q form-control", id: "q", autofocus: true, data: { autocomplete_enabled: autocomplete_enabled?, autocomplete_path: blacklight.suggest_index_path }  %>
      <span class="input-group-btn">
      <button type="submit" class="btn btn-primary search-btn" id="search">
        <div title="search" class="mag-bg"><span class="visually-hidden"><%= t('blacklight.search.form.submit') %></span></div>
      </button>
    </span>
    </div>
<% end %>
