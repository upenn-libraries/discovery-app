<a href="/"><h1 class="franklin-title" title="Franklin"><span class="visually-hidden">Franklin</span></h1></a>
<%= form_tag '', method: :get, class: 'summon-form search-query-form clearfix navbar-form', id: 'a-search', 'aria-label': 'search articles',  role: 'search' do %>
    <div class="input-group">
      <label for="q2" class="sr-only"><%= t('blacklight.search.form.search.label') %></label>
      <%= text_field_tag :q, params[:q], placeholder: t('franklin.articles_search.placeholder'), class: "search_q q form-control", id: "q2", data: { autocomplete_enabled: autocomplete_enabled?, autocomplete_path: blacklight.suggest_index_path }  %>
      <span class="input-group-btn">
      <button type="submit" class="btn btn-primary search-btn" id="search">
        <div title="search" class="mag-bg"><span class="visually-hidden"><%= t('blacklight.search.form.submit') %></span></div>
      </button>
    </span>
    </div>
    <div class="limit-options">
      <div class="checkbox">
        <label>
          <input value="IsScholarly,true,f" name="fvf" id="articleCheckBoxPeerReview" type="checkbox"> Scholarly &amp; peer-review only
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input value="IsFullText,true,f" name="fvf" id="articleCheckBoxFulltext" type="checkbox"> Full text only
        </label>
      </div>
      <div class="checkbox">
        <label>
          <input value="ContentType,Newspaper Article,t" name="fvf" id="articleFilter1" type="checkbox"> Exclude Newspapers
        </label>
      </div>
    </div>
<% end %>
