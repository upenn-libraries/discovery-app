<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <div class="modal-title" id="exampleModalLabel">Item has Limited Access</div>
    </div>
    <div class="modal-body">
      <div class="alert alert-danger">
        <%= t noncirc_type, scope: 'requests.messages.noncirc', library: params[:library] %>
      </div>
      <p>
        If you would like to receive a physical copy, you may try submitting an Interlibrary Loan (ILL) request using
        the button below.
      </p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('requests.buttons.close') %></button>
      <%= link_to t('requests.buttons.ill_request'), @ill_url, target: '_blank', class: 'btn btn-default' %>
    </div>
  </div>
</div>
